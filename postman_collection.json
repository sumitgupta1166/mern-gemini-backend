{
  "info": {
    "name": "Knowledge Hub API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "http://localhost:8000/api/v1/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{ \"name\": \"Test User\", \"email\": \"user@example.com\", \"password\": \"password123\" }"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "http://localhost:8000/api/v1/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{ \"email\": \"user@example.com\", \"password\": \"password123\" }"
            }
          }
        },
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "url": "http://localhost:8000/api/v1/auth/me",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    },
    {
      "name": "Docs",
      "item": [
        {
          "name": "Create Doc",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "http://localhost:8000/api/v1/docs",
            "body": {
              "mode": "raw",
              "raw": "{ \"title\": \"Sample Document\", \"content\": \"This is the document content.\" }"
            }
          }
        },
        {
          "name": "List Docs",
          "request": {
            "method": "GET",
            "url": "http://localhost:8000/api/v1/docs",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Get Doc",
          "request": {
            "method": "GET",
            "url": "http://localhost:8000/api/v1/docs/{{docId}}",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Update Doc",
          "request": {
            "method": "PUT",
            "url": "http://localhost:8000/api/v1/docs/{{docId}}",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"title\": \"Updated Document\", \"content\": \"New content here\" }"
            }
          }
        },
        {
          "name": "Delete Doc",
          "request": {
            "method": "DELETE",
            "url": "http://localhost:8000/api/v1/docs/{{docId}}",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Summarize Doc",
          "request": {
            "method": "POST",
            "url": "http://localhost:8000/api/v1/docs/{{docId}}/summarize",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Generate Tags",
          "request": {
            "method": "POST",
            "url": "http://localhost:8000/api/v1/docs/{{docId}}/tags",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Get Versions",
          "request": {
            "method": "GET",
            "url": "http://localhost:8000/api/v1/docs/{{docId}}/versions",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    },
    {
      "name": "Search",
      "item": [
        {
          "name": "Text Search",
          "request": {
            "method": "GET",
            "url": "http://localhost:8000/api/v1/search/text?q=sample",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Semantic Search",
          "request": {
            "method": "GET",
            "url": "http://localhost:8000/api/v1/search/semantic?q=sample",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    },
    {
      "name": "QA",
      "item": [
        {
          "name": "Ask Question",
          "request": {
            "method": "POST",
            "url": "http://localhost:8000/api/v1/qa/ask",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"question\": \"What is the purpose of this project?\" }"
            }
          }
        }
      ]
    }
  ]
}